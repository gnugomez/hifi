<section id="auth">
  <img
    src="/dist/frontend/assets/img/auth/register-bg.jpg"
    class="bg-image"
    alt=""
  />
  <div class="auth-wrapper">
    <div class="register">
      <div class="header relative">
        <img
          src="/dist/frontend/assets/img/auth/register-cover.png"
          class="bg-image"
          alt=""
        />
        <h1
          class="
            font-roboto
            text-5xl text-center
            py-12
            relative
            z-10
            font-light
            text-white
          "
        >
          Create your account
        </h1>
      </div>
      <form action="{{ form.action }}" method="{{ form.method }}">
        {% for field in form.fields %}
        <div class="input-wrapper">
          <input
            type="{{ field.type }}"
            name="{{ field.name }}"
            value="{{ field.value }}"
            placeholder="{{ field.label }}"
            required="{{ field.required }}"
            class="{{ field.error ? 'field-error' : '' }}"
          />
          {% if field.error %}
          <span class="error">{{ field.error }}</span>
          {% endif %}
        </div>
        {% endfor %}
        <div class="checkbox">
          <input id="acceptance" type="checkbox" name="remember" required />
          <label for="acceptance"
            >I accept the terms, privacy and cookie policy</label
          >
        </div>
        <span class="text-center text-sm"
          >Already have an account?
          <a class="link" href="/login">Login.</a></span
        >
        <button
          class="btn btn-secondary btn-md inline-block mx-auto"
          type="submit"
        >
          Register
        </button>
      </form>
    </div>
  </div>
</section>
