<section id="auth">
  <div class="auth-wrapper">
    <img
      src="/dist/frontend/assets/img/auth/login-bg.jpg"
      class="bg-image"
      alt=""
    />
    <div class="login">
      <div class="header relative">
        <img
          src="/dist/frontend/assets/img/auth/login-cover.png"
          class="bg-image"
          alt=""
        />
        <h1
          class="
            font-roboto
            text-5xl text-center
            py-12
            relative
            font-light
            z-10
            text-white
          "
        >
          Sign in
        </h1>
      </div>
      <form action="{{ form.action }}" method="{{ form.method }}">
        {% for field in form.fields %}
        <div class="input-wrapper">
          <input
            type="{{ field.type }}"
            name="{{ field.name }}"
            value="{{ field.value }}"
            placeholder="{{ field.label }}"
            required="{{ field.required }}"
            class="{{ field.error ? 'field-error' : '' }}"
          />
          {% if field.error %}
          <span class="error">{{ field.error }}</span>
          {% endif %}
        </div>
        {% endfor %}
        <div class="checkbox">
          <input id="remember" type="checkbox" name="remember" />
          <label for="remember">Remember me.</label>
        </div>
        <span class="text-center text-sm"
          >Donâ€™t have an account?
          <a class="link" href="/register">Register now.</a></span
        >
        <button
          type="submit"
          class="btn btn-secondary btn-md inline-block mx-auto"
        >
          Sign in
        </button>
      </form>
    </div>
  </div>
</section>
